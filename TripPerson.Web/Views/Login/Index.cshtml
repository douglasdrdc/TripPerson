
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <!-- Heading Row -->
    <div class="row">
        <div class="col-md-8">
            <img class="img-responsive" src="~/img/figura1.jpg" alt="">
        </div>

        <div class="col-md-4">
            <form>
                <h2 class="titpensado">Viaje Agora</h2>
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="email" id="inputEmail" class="form-control" placeholder="Email" required="" autofocus="">
                <br />
                <label for="inputPassword" class="sr-only">Senha</label>
                <input type="password" id="inputPassword" class="form-control" placeholder="Senha" required="">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"> Lembre-me
                    </label>
                    <label>
                        <a href="#">Esqueci minha senha</a><br>
                        <a href="cadastro.html">cadastre-se</a><br>
                    </label>
                </div>
                
                <a href="@Url.Action("CadastroPorSecao", "Preferencias")" class="btn btn-lg btn-primary btn-block btn-viajar">
                    <span>Viajar</span>
                </a>
                
                <br>
                <div>
                    <a class="btn btn-block btn-social btn-instagram" href="@Url.Action("CadastroPorSecao", "Preferencias")" >
                        <span class="fa fa-instagram"></span> Login com Instragram
                    </a>
                    <a class="btn btn-block btn-social btn-facebook" href="@Url.Action("CadastroPorSecao", "Preferencias")" >
                        <span class="fa fa-facebook"></span> Login com Facebook
                    </a>
                </div>
            </form>

        </div>
    </div>
    

    
    <br />
    <div class="panel panel-default titulo1" >
        <div class="panel-body">

            <div class="text-center">
                <p class="text-white m-0">SUA VIAGEM DE UMA FORMA PERSONALIZADA E INESQUECÍVEL!</p>
            </div>
            
        </div>
    </div>


</div>