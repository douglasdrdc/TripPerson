@model IEnumerable<TripPerson.Web.Models.HotelModel>

@{
    ViewBag.Title = "Pesquisa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model == null || (Model != null && Model.Count() <= 0))
{
    if (ViewData["StatusMessage"] != null)
    {
        <div class="alert alert-info" role="alert" style="text-align: center;">
            ViewData["StatusMessage"]
        </div>
    }
}
else
{
    <div class="row content">

        <!-- Pesquisa de Hoteis -->
        <div class="col-sm-3 sidenav">
            <div class="col-sm-12 sidenav text-left" style="background-color: #f5f5f5; ">
                <form>
                    <div class="form-group col-xs-12 col-md-12 ">
                        <div class="form-group col-xs-12 col-md-12">
                            <label>Destino</label>
                            <input type="text" class="form-control " style="margin-bottom: 5px;" placeholder="São Paulo">
                        </div>
                        <div class="form-group col-xs-6 col-md-6">
                            <label>Datas</label>
                            <input type="text" class="form-control" placeholder="20 out 2017">
                        </div>
                        <div class="form-group col-xs-6 col-md-6">
                            <label>3 noites</label>
                            <input type="text" class="form-control" placeholder="24 out 2017">
                        </div>
                        <div class="form-group col-xs-12 col-md-12">
                            <input type="checkbox"><span>  Ainda não defini as datas</span>
                        </div>

                        <div class="form-group col-xs-6 col-md-6">
                            <label>Quartos</label>
                            <input type="text" class="form-control" placeholder="1">
                        </div>
                        <div class="form-group col-xs-6 col-md-6">
                            <label>Crianças</label>
                            <input type="text" class="form-control" placeholder="0">
                        </div>
                        <button style="background-color: #2ace50;" class="btn btn-default  form-group col-xs-12 col-md-12"><label>Pesquisar</label></button>
                    </div>
                </form>
            </div>
            <div class="col-sm-12 sidenav text-left">
                <form>
                    <img src="~/img/Map.png" class="img-responsive" />
                </form>
            </div>
        </div>

        <!-- Lista de Hoteis -->
        <div class="col-sm-8 text-left">
            <h3>Bem-Vindo</h3>
            <p>Hotel Tour, é a primeira agência de turismo que oferece pra você uma busca de hoteis personalizada de acordo o suas preferencias de musicas, esportes, lazer, e muito mais... Tudo para que você possa ter a melhor experiência em sua viagem.</p>
            <hr>
            <h1 class="titpensado">Hoteis Pensados para Você!!!</h1>
            <hr />
            @foreach (var item in Model)
            {
                <div class="row well well-sm">
                    <div class="col-sm-3">
                        <img src="@Url.Content(item.Image)" width="210">
                    </div>
                    <div class="col-sm-1"></div>
                    <div class="col-sm-4">
                        <span class="tithotel">
                            @Html.DisplayFor(modelItem => item.Name)
                            <br>

                            @if (item.Awards == 0)
                            {
                                <i class="fa fa-star-o" aria-hidden="true"></i>
                            }
                            else
                            {
                                for (var i = 0; i < item.Awards; i++)
                                {
                                    <i class="fa fa-star star" aria-hidden="true"></i>
                                }
                            }
                            
                        </span><br><br>
                        <span><i class="fa fa-bed" aria-hidden="true"></i> Cama Solteiro</span><br>
                        <span><i class="fa fa-television" aria-hidden="true"></i> TV</span><br>
                        <span><i class="fa fa-wifi" aria-hidden="true"></i> Wifi</span>
                    </div>
                    <div class="col-sm-2">
                        <span class="preco">R$</span><br><span class="preco2"> 
                            @Html.DisplayFor(modelItem => item.Price.amount)
                        </span>
                        <button type="button" class="btn btn-success">Reservar</button>
                    </div>
                    <div class="col-sm-2 text10 well well-sm musica"><h4>Musica</h4> <br> <i class="fa fa-volume-up fa-3x text-center" aria-hidden="true"></i></div>
                </div>

                
            }

        </div>

    </div>




